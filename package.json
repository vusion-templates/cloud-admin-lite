{
  "name": "cloud-admin-template",
  "version": "0.1.2",
  "description": "base on vue cloud-ui.vusion template",
  "main": "src/views/dashboard/index.js",
  "scripts": {
    "dev": "npm run update:ui && vue-cli-service serve",
    "build": "vue-cli-service build --apply-theme",
    "build:stage": "vue-cli-service build --mode staging",
    "lint": "npx eslint --quiet",
    "lint:fix": "npm run lint -- \"./src/**/*.{js,vue}\" --fix",
    "update:ui": "cd node_modules/cloud-ui.vusion && vue-cli-service library-build --cache --vusion-mode raw -o ../../ui --theme ../../src/global/styles/theme.css",
    "update:ui:force": "shx rm -rf ui && npm run update:ui",
    "dll": "npx webpack --config webpack.dll.config.js --env.NODE_ENV production && npx webpack --config webpack.dll.config.js --env.NODE_ENV development",
    "test:unit": "vue-cli-service test:unit",
    "test:unit:watch": "npm run test:unit -- --watch"
  },
  "keywords": [
    "vue",
    "admin",
    "cloud-ui",
    "template"
  ],
  "author": "zhangsanshi5566@gmail.com",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vusion-templates/cloud-admin-template.git"
  },
  "bugs": {
    "url": "https://github.com/vusion-templates/cloud-admin-template/issues"
  },
  "homepage": "https://vusion-templates.github.io/cloud-admin-template",
  "license": "MIT",
  "devDependencies": {
    "@babel/cli": "^7.6.0",
    "@babel/core": "^7.6.0",
    "@babel/plugin-transform-strict-mode": "^7.2.0",
    "@vue/babel-preset-app": "^3.11.0",
    "@vue/cli": "^3.12.0",
    "@vue/cli-plugin-babel": "^3.11.0",
    "@vue/cli-plugin-unit-jest": "^3.12.0",
    "@vue/cli-service": "^3.11.0",
    "@vue/test-utils": "1.0.0-beta.29",
    "add-asset-html-webpack-plugin": "^3.1.3",
    "babel-core": "7.0.0-bridge.0",
    "babel-eslint": "^10.0.3",
    "babel-jest": "^23.6.0",
    "copy-webpack-plugin": "^5.0.4",
    "eslint": "^6.5.1",
    "eslint-config-vusion": "^3.0.2",
    "html-webpack-plugin": "^3.2.0",
    "husky": "^3.0.5",
    "lint-staged": "^9.2.5",
    "postcss-nested": "^4.1.2",
    "raw-loader": "^3.1.0",
    "shx": "^0.3.2",
    "underscore-template-loader": "^1.0.0",
    "vue-cli-plugin-vusion": "^0.8.2",
    "webpack": "^4.40.2",
    "webpack-cli": "^3.3.9"
  },
  "dependencies": {
    "axios": "^0.19.0",
    "babel-polyfill": "^6.26.0",
    "cloud-ui.vusion": "0.6.0",
    "date-fns": "^2.6.0",
    "lodash": "^4.17.15",
    "proto-ui.vusion": "0.6.1",
    "qs": "^6.8.0",
    "request-pre": "0.1.0",
    "vue": "^2.6.10",
    "vue-i18n": "^8.14.0",
    "vue-router": "^3.1.2",
    "vue-template-compiler": "^2.6.10",
    "vusion-utils": "^0.4.5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,vue}": [
      "npm run lint -- --fix",
      "git add"
    ]
  },
  "vusion": {
    "ignore": [
      "deploy.sh",
      ".circleci"
    ],
    "type": "template",
    "title": "Vusion Lite",
    "category": "basic",
    "base": "vue",
    "ui": "cloud-ui",
    "screenshots": [
      "https://unpkg.com/cloud-admin-template/screenshots/0.jpg",
      "https://unpkg.com/cloud-admin-template/screenshots/1.jpg"
    ],
    "team": "",
    "auth": "public"
  }
}
